<div class='row'>
  <div class='col-xs-12'>
    <%= form_for(@purchase,:html => {class:'form-horizontal',role:'form'}) do |f| %>


<div class='form-group'>
  <div class='row'>
    <div class='col-sm-offset-2 col-ms-8'>
      <%= f.collection_check_boxes :service_ids,Service.all, :id, :nombre do |cb| %>
        <% cb.label(class:'checkbox-inline input_checkbox'){cb.check_box(class:'checkbox')+cb.text} %>
      <% end %>
    </div>
  </div>
</div>

<div class='form-group'>
      <div class='control-label col-sm-2'>
        <%= f.label :total %>
      </div>
      <div class='col-sm-8'>
        <%= f.text_field :total, class:'form-control',placeholder: 'Total'%>
      </div>
</div>


<div class='form-group'>
  <div id= "btmargin" class='col-sm-offset-2 col-sm-10'>
    <%= f.submit class:'btn btn-primary btn-lg'%>
  </div>
</div>


    <% end %>

</div>
</div>
