<html>
  <!--Inicio de Head-->
  <head>
    <link href="https://fonts.googleapis.com/css?family=Quicksand" rel="stylesheet">
    <link rel="stylesheet" href="comprastyle.css">
    <%= stylesheet_link_tag    'comprastyle', media: 'all' %>
  </head>
  
  <!--Inicio de Body -->
  <body>
    <!-- Inicio de clase encabezado-->
    <div class="bannerhead">
      <h1 class="comprish1" align="center"> COMPRA #<%= @purchase.id%> </h1>
    </div>
    <!-- Inicio de contenido -->
    <div class='well col-xs-8 col-xs-offset-2'>
    <!-- Inicio de columna central -->
    <div class="cuerpeson col-md-4">
      <% if @purchase.user %>
       <ul class="listing">
              <div class="row center">
    
                  <div class="col-md-4 col-md-offset-4">
                          <li class="grande"></li>
                  </div>
              </div>
          </ul>
    
          <% end %>
    <h5 style="margin-top:15px;"> Creado a las : <%= @purchase.created_at %> </h5> 
      <hr>
    <h5> Total : <%= @purchase.total%></h5>
    <hr>
    <% if @purchase.services.any? %>
      <p style="font-size:25px!important;"> Servicios: <%= render @purchase.services %> </p><hr>
    <% end %>
    </div> <!--Fin de columna central-->
  </div>  <!--Fin de contenido -->
  
  <h2 align='center' style="margin-top:40px;">Tu compra fue realizada con Ã©xito! </h2>
  </body>  
  
</html>

