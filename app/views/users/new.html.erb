<!DOCTYPE html>
<html>
    <head>
<meta charset="utf-8">
 <%= stylesheet_link_tag    'style', media: 'all' %>
</head>

<body>
<div class='row'>
<div class='col-xs-12'>
                <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
            <div class='form-group'>
            <div class="control-label col-sm-2">
                <%= f.label :nocontrol %>
                 </div>
            <div class='col-sm-8'>
                <%= f.text_field :nocontrol, id: 'correo2', placeholder: 'Ingresa tu No. Control', autofocus: true %>
                </div>
                </div>

           <div class='form-group'>
            <div class="control-label col-sm-2">
                <%= f.label :nombre %>
                </div>
            <div class='col-sm-8'>
                <%= f.text_field :nombre,  id: 'correo2', placeholder: 'Ingresa tu nombre' %>
                 </div>
                </div>

                <div class='form-group'>
                 <div class="control-label col-sm-2">
                     <%= f.label :usuario %>
                     </div>
                 <div class='col-sm-8'>
                     <%= f.text_field :usuario,  id: 'correo2', placeholder: 'Ingresa tu usuario' %>
                      </div>
                     </div>



                 <div class='form-group'>
            <div class="control-label col-sm-2">
                <%= f.label :password %>
                </div>
            <div class='col-sm-8'>
                <%= f.password_field :password,  id: 'correo2', placeholder: 'Enter password' %>
                 </div>
                </div>

                <div class='form-group'>
                 <div class="control-label col-sm-2">
                     <%= f.label :carrera %>
                     </div>
                 <div class='col-sm-8'>
                     <%= f.text_field :carrera,  id: 'correo2', placeholder: 'Inslowresa tu carrera' %>
                      </div>
                     </div>

                     <div class='form-group'>
                      <div class="control-label col-sm-2">
                          <%= f.label :semestre %>
                          </div>
                      <div class='col-sm-8'>
                        <%= f.text_field :semestre,  id: 'correo2', placeholder: 'Ingresa tu semestre' %>
                           </div>
                          </div>



            <div class='form-group'>
            <div class='col-sm-offset-2 col-sm-10'>
                <!-- Si el usuario no esta registrado el boton dira SIGN UP-->
                <!-- Pero si ya esta registrado entonces dira UPDATE -->
                <%= f.submit(@user.new_record? ?  "Sign up" : "Update account", id: 'boton' )%>
                </div>
                </div>

            <% end %>
        <div class='col-xs-4 col-xs-offset-4'>
            [ <%= link_to "Index" , root_path%> ]
        </div>
</div>
</div>




</body>
</html>
