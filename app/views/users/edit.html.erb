<div class='row'>
<div class='col-xs-12'>
                <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
            <div class='form-group'>
            <div class="control-label col-sm-2">
                <%= f.label :nocontrol %>
                 </div>
            <div class='col-sm-8'>
                <%= f.text_field :nocontrol, class: 'form-control', placeholder: 'Ingresa tu No. Control', autofocus: true %>
                </div>
                </div>

           <div class='form-group'>
            <div class="control-label col-sm-2">
                <%= f.label :nombre %>
                </div>
            <div class='col-sm-8'>
                <%= f.text_field :nombre, class: 'form-control', placeholder: 'Ingresa tu nombre' %>
                 </div>
                </div>

                <div class='form-group'>
                 <div class="control-label col-sm-2">
                     <%= f.label :usuario %>
                     </div>
                 <div class='col-sm-8'>
                     <%= f.text_field :usuario, class: 'form-control', placeholder: 'Ingresa tu usuario' %>
                      </div>
                     </div>



                 <div class='form-group'>
            <div class="control-label col-sm-2">
                <%= f.label :password %>
                </div>
            <div class='col-sm-8'>
                <%= f.password_field :password, class: 'form-control', placeholder: 'Enter password' %>
                 </div>
                </div>

                <div class='form-group'>
                 <div class="control-label col-sm-2">
                     <%= f.label :carrera %>
                     </div>
                 <div class='col-sm-8'>
                     <%= f.text_field :carrera, class: 'form-control', placeholder: 'Inslowresa tu carrera' %>
                      </div>
                     </div>

                     <div class='form-group'>
                      <div class="control-label col-sm-2">
                          <%= f.label :semestre %>
                          </div>
                      <div class='col-sm-8'>
                        <%= f.text_field :semestre, class: 'form-control', placeholder: 'Ingresa tu semestre' %>
                           </div>
                          </div>



            <div class='form-group'>
            <div class='col-sm-offset-2 col-sm-10'>
                <!-- Si el usuario no esta registrado el boton dira SIGN UP-->
                <!-- Pero si ya esta registrado entonces dira UPDATE -->
                <%= f.submit(@user.new_record? ?  "Sign up" : "Update account", class: 'btn btn-primary btn-lg' )%>
                </div>
                </div>

            <% end %>
        <div class='col-xs-4 col-xs-offset-4'>
            [ <%= link_to "Index" , root_path%> ]
        </div>
</div>
</div>
