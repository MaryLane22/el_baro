<html>
  <!--Inicio de Head-->
  <head>
    <link href="https://fonts.googleapis.com/css?family=Quicksand" rel="stylesheet">
    <link rel="stylesheet" href="comprastyle.css">
    <%= stylesheet_link_tag    'comprastyle', media: 'all' %>
  </head>
  
  <!--Inicio de Body -->
  <body>
    <!-- Inicio de clase encabezado-->
    <div class="bannerhead">
      <h1 class="comprish1" align="center"> COMPRA CON VISA</h1>
    </div>
    <!-- Inicio de contenido -->
    <div class='well col-xs-8 col-xs-offset-2'>
    <!-- Inicio de columna central -->
    <div class="cuerpeson col-md-4">
        
        <% if @ctransaction.user %>
         <ul class="listing">
                <div class="row center">
    
                    <div class="col-md-4 col-md-offset-4">
                            <li class="grande"></li>
                    </div>
                </div>
            </ul>
    
        <% end %>
    
        <h5 style="margin-top:15px">Nombre de propietario : <%= simple_format(@ctransaction.nombre_propietario) %> </h5> <hr>
        <h5>Numero de tarjeta : <%= simple_format(@ctransaction.numero_tarjeta) %> </h5> <hr>
        <h5>Fecha de vencimiento :   <%= @ctransaction.fecha_vencimiento%> </h5> <hr>
        <h5>Codigo:   <%= @ctransaction.codigo %> </h5> <hr>
        <h5>Monto :   <%= @ctransaction.monto%> </h5> <hr>
        <h5>Total :  <%= @ctransaction.total%> </h5> <hr>

      
    </div> <!--Fin de columna central-->
  </div>  <!--Fin de contenido -->
  
  
  
  <h2 align='center' style="margin-top:40px;">Tu compra fue realizada con Ã©xito! </h2>

  </body>  
  
</html>




